{
    "name"   : "cs4350/hw01",
    "description": "Homework 01",
    "license": "MIT",
    "autoload": {
        "psr-4":{
            "App\\": "src/",
            "App\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1.14"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "squizlabs/php_codesniffer": "^3.1",
        "fzaninotto/faker": "^1.7"
    },
    "scripts": {
        "clean": [
            "rm -f composer.lock",
            "rm -f junit.xml",
            "rm -fr vendor/"
        ],
        "fix": "vendor/bin/phpcbf --standard=PSR2 --extensions=php controllers models routes src tests",
        "push": [
            "git add .",
            "git commit -m 'Updated assignment'",
            "git push origin"
        ],
        "sniff": "vendor/bin/phpcs --standard=PSR2 --extensions=php src tests",
        "test": [
            "vendor/bin/phpunit"
        ]
    }
}
